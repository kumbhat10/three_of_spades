<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/font_grey_settings</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon3s_shadow_animated</item> // Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. One of these is required.
        <item name="windowSplashScreenAnimationDuration">3500</item>  # Required for
        # animated icons
        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.App</item>  # Required.
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnSecondary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
    </style>

    <style name="Theme.launcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.ProfilePic" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">0dp</item>

        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>

        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_10sdp</item>

        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.ProfileCard" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">0dp</item>

        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_28sdp</item>

        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_14sdp</item>

        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.Card.AllRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.AllRounded1" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_9sdp</item>

        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_9sdp</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
<!--        <item name="android:textAllCaps">false</item>-->
            <item name="android:textSize">@dimen/_11ssp</item>
    </style>

</resources>