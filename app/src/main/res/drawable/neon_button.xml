<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item >
                <shape>
                    <corners android:radius="@dimen/_10sdp" />
                    <gradient
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:endColor="#B78AA569"
                        android:startColor="#C8428046"
                        android:gradientRadius="70%"
                        android:type="radial" />
                </shape>
            </item>

            <item android:bottom="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:top="@dimen/_5sdp">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_6sdp" />

                    <stroke android:width="4dp"
                        android:color="#44FF00" />
                </shape>
            </item>



        </layer-list>
    </item>

</selector>