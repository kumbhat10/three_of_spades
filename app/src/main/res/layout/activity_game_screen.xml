            android:layout_toEndOf="@id/imageViewSelf"
            android:contentDescription="@string/app_name"
            android:rotation="20"
            android:visibility="gone"
            app:srcCompat="@drawable/c10" />

        <ImageView
            android:id="@+id/imageViewTable5"
            android:layout_width="@dimen/tableCardImageWidth"
            android:layout_height="@dimen/tableCardImageHeight"
            android:layout_above="@+id/imageViewTable6"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="-20dp"
            android:layout_toEndOf="@+id/imageViewSelf"
            android:contentDescription="@string/app_name"
            android:rotation="80"
            android:visibility="gone"
            app:srcCompat="@drawable/c10" />

        <ImageView
            android:id="@+id/imageViewTable6"
            android:layout_width="@dimen/tableCardImageWidth"
            android:layout_height="@dimen/tableCardImageHeight"
            android:layout_above="@+id/imageViewSelf"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-45dp"
            android:layout_toEndOf="@+id/imageViewSelf"
            android:contentDescription="@string/app_name"
            android:rotation="-55"
            android:visibility="gone"
            app:srcCompat="@drawable/c10" />

        <ImageView
            android:id="@+id/imageViewSelf"
            android:layout_width="@dimen/tableCardImageWidth"
            android:layout_height="@dimen/tableCardImageHeight"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            app:srcCompat="@drawable/c10" />

        <ImageView
            android:id="@+id/imageViewWinnerCenter"
            android:layout_width="@dimen/tableCardImageWidth"
            android:layout_height="@dimen/tableCardImageHeight"
            android:layout_above="@+id/imageViewSelf"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_back_side_blue" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scoreViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/startNextRoundButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shine_scoretable_background"
        android:animateLayoutChanges="true"
        android:elevation="60dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/scoreTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="@string/score_board"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/addViewGameScreenBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            app:adSize="BANNER"
            app:adUnitId="@string/banner" />

        <ScrollView
            android:id="@+id/scrollViewScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/addViewGameScreenBanner"
            android:layout_below="@+id/scoreTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:animateLayoutChanges="true"
            android:scrollbarSize="14dp"
            android:scrollbarStyle="insideOverlay"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/imageGalleryScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" />
        </ScrollView>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNextRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/start_next_game"
        android:clickable="true"
        android:contentDescription="@string/todo"
        android:focusable="true"
        android:onClick="startNextGame"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/start_next_game"
        android:textColor="@color/icon_yellow"
        android:textSize="20sp"
        android:visibility="gone"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="L"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
