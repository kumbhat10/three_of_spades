        android:id="@+id/frameAskBid"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shine_scoretable_background"
        android:layout_marginBottom="0dp"
        android:elevation="100dp"
        android:fadingEdge="horizontal|vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:alpha="1"
            android:gravity="center|center_horizontal"
            android:text="@string/raise_bid_or_pass"
            android:textColor="@color/font_yellow"
            android:textSize="35sp" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:animateLayoutChanges="true"
            app:chipSpacingHorizontal="10dp"
            app:singleSelection="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bid05button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/button_square"
                android:onClick="askToBid"
                android:tag="5"
                android:text="@string/bid05button"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bid10button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/button_square"
                android:onClick="askToBid"
                android:shadowDy="4"
                android:tag="10"
                android:text="@string/bid10button"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bid20button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/button_square"
                android:onClick="askToBid"
                android:shadowDy="4"
                android:tag="20"
                android:text="@string/bid20button"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bid50button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/button_square"
                android:onClick="askToBid"
                android:shadowDy="4"
                android:tag="50"
                android:text="@string/bid50button"
                android:textColor="@color/Black"
                android:textSize="30sp" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bidpassbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_square_red"
            android:onClick="askToBid"
            android:paddingStart="15dp"
            android:paddingTop="3dp"
            android:paddingEnd="15dp"
            android:paddingBottom="3dp"
            android:shadowDy="4"
            android:tag="pass"
            android:text="@string/passText"
            android:textColor="#D3D3D3"
            android:textSize="35sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameTrumpSelection"
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shine_scoretable_background"
        android:layout_marginStart="125dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="0dp"
        android:elevation="100dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewTrumpSelection"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:alpha="1"
            android:gravity="center|center_horizontal"
            android:text="@string/chooseTrump"
            android:textColor="@color/font_yellow"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/trumpSelectionHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            app:singleLine="true">

            <ImageView
                android:id="@+id/imageViewTrumpHearts"
                android:layout_width="@dimen/trumpSelectionImageWidth"
                android:layout_height="@dimen/trumpSelectionImageHeight"
                android:background="#C6040E17"
                android:contentDescription="@string/app_name"
                android:onClick="onTrumpSelectionClick"
                android:tag="h"
                app:srcCompat="@drawable/ic_hearts" />

            <ImageView
                android:id="@+id/imageViewTrumpSpades"
                android:layout_width="@dimen/trumpSelectionImageWidth"
                android:layout_height="@dimen/trumpSelectionImageHeight"
                android:background="#DDFFFFFF"
                android:contentDescription="@string/app_name"
                android:onClick="onTrumpSelectionClick"
                android:tag="s"
                app:srcCompat="@drawable/ic_spades" />

            <ImageView
                android:id="@+id/imageViewTrumpDiamonds"
                android:layout_width="@dimen/trumpSelectionImageWidth"
                android:layout_height="@dimen/trumpSelectionImageHeight"
                android:background="#C6040E17"
                android:contentDescription="@string/app_name"
                android:onClick="onTrumpSelectionClick"
                android:tag="d"
                app:srcCompat="@drawable/ic_diamonds" />

            <ImageView
                android:id="@+id/imageViewTrumpClubs"
                android:layout_width="@dimen/trumpSelectionImageWidth"
                android:layout_height="@dimen/trumpSelectionImageHeight"
                android:background="#DDFFFFFF"
                android:contentDescription="@string/app_name"
                android:onClick="onTrumpSelectionClick"
                android:tag="c"
                app:srcCompat="@drawable/ic_clubs" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/chatLinearLayout"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shine_chat_background"
        android:elevation="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.gms.ads.AdView
            android:id="@+id/addViewChatGameScreenBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            app:adSize="BANNER"
            app:adUnitId="@string/banner" />

        <ScrollView
            android:id="@+id/textViewChatDisplayScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chatInput"
            android:layout_below="@+id/addViewChatGameScreenBanner"
            android:elevation="100dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="9dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/textViewChatDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:elevation="100dp"
                android:gravity="bottom|start"
                android:hint="@string/chatWindowDisplay"
                android:paddingStart="4dp"
                android:paddingEnd="3dp"
                android:paddingBottom="6dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:textSize="14sp" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/chatInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:elevation="100dp"
            android:gravity="fill"
            android:orientation="horizontal"
            app:singleLine="true">

            <EditText
                android:id="@+id/editTextChatInput"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@drawable/shine_chat_background"
                android:elevation="100dp"
                android:hint="@string/chatInputHint"
                android:imeOptions="actionSend"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingEnd="3dp"
                android:textColor="@color/white"
                android:textColorHint="#A6A6A6"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chatSendButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_square"
                android:elevation="100dp"
                android:gravity="center"
                android:onClick="sendChat"
                android:text="@string/sendChatButton"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPartnerSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shine_chat_background"
        android:elevation="200dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewPartnerSelect"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center|center_horizontal"
            android:text="@string/partnerSelection1"
            android:textColor="@color/font_yellow"
            android:textSize="40sp" />

        <HorizontalScrollView
            android:id="@+id/horScrollPartnerSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:animateLayoutChanges="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollIndicators="top"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/partnerSelectionGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:scrollIndicators="bottom"
                android:scrollbarDefaultDelayBeforeFade="700"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutTableCards"
        android:layout_width="match_parent"
