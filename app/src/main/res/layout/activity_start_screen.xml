<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:onClick="developerCredits"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    tools:context=".StartScreen">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/googleSignInButton"
        android:src="@drawable/black_squares" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/googleSignInButton"
        android:contentDescription="@null"
        android:src= "@drawable/_s_icon_spadeedit"/>


    <ImageView
        android:id="@+id/icon_3startscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/googleSignInButton"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:contentDescription="@null"
        android:src="@drawable/_s_icon_3shadow"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        android:layout_width="@dimen/loginWidth"
        android:layout_height="80dp"
        android:layout_above="@+id/orOption"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_1sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/orOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/googleSignInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_1sdp"
        android:gravity="center"
        android:text="or"
        android:textColor="#BAB9B9"
        android:textSize="@dimen/_11ssp"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_width="@dimen/loginWidthGoogle"
        android:layout_height="@dimen/loginHeightGoogle"
        android:layout_above="@+id/twitterLoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:insetBottom="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:visibility="visible" />



    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitterLoginButton"
        android:layout_width="@dimen/loginWidth"
        android:layout_height="@dimen/loginHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="#338BCD"
        android:textColor="#FFFFFF" />

<RelativeLayout
    android:id="@+id/maskButtons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignTop="@+id/facebookLoginButton"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="@dimen/_minus2sdp"
    android:background="@color/BlackTrans"
    android:clickable="true"
    android:elevation="@dimen/_64sdp"
    android:focusable="true"
    android:visibility="gone">

    <ProgressBar
        android:id="@+id/progressBarLoading2"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:indeterminateOnly="false"
        android:indeterminateTint="#FFE500"
        android:progressTintMode="src_in"
        android:rotation="360" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shine_button_black"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="sans-serif-condensed"
        android:paddingStart="@dimen/_22sdp"
        android:paddingEnd="@dimen/_22sdp"
        android:text="@string/signinsuccess"
        android:textAlignment="center"
        android:textColor="@color/progressBarPlayer4"
        android:textSize="@dimen/_16ssp"
        android:visibility="gone" />

</RelativeLayout>

</RelativeLayout>