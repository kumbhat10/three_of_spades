<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:onClick="developerCredits"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    tools:context=".StartScreen">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/black_squares" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX= "0.9"
        android:scaleY="0.9"
        android:contentDescription="@null"
        android:src= "@drawable/_s_icon_spadeedit"/>


    <ImageView
        android:id="@+id/icon_3startscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:contentDescription="@null"
        android:src="@drawable/_s_icon_3shadow"/>


    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/facebookLoginButton"
        android:layout_alignStart="@+id/facebookLoginButton"
        android:layout_alignEnd="@+id/facebookLoginButton"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="6dp"
        android:visibility="visible" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/twitterLoginButton"
        android:layout_alignStart="@+id/twitterLoginButton"
        android:layout_alignEnd="@+id/twitterLoginButton"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitterLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#0D5098"
        android:textColor="#FFFFFF" />


</RelativeLayout>