<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/scoreTablePhotoTotal"
    android:layout_height="wrap_content"
    android:background="@drawable/shine_user_rank"
    android:paddingBottom="@dimen/_1sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userPhoto1"
        android:layout_width="@dimen/scoreTablePhoto"
        android:layout_height="@dimen/scoreTablePhoto"
        android:layout_marginStart="@dimen/scoreTablePhotoMargin"
        android:layout_marginEnd="@dimen/scoreTablePhotoMargin"
        android:layout_marginTop="@dimen/scoreTablePhotoMargin"
        android:src="@drawable/user_photo"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_1sdp"
        android:fontFamily="@font/luckiest_guy"
        android:shadowColor="@color/Black"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:text="@string/playerView1"
        android:shadowDy="3"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userPhoto1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userScore2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/total"
        android:shadowColor="@color/Black"
        android:shadowRadius="3"
        android:fontFamily="@font/luckiest_guy"
        android:shadowDx="3"
        android:shadowDy="3"
        android:textColor="#FFF314"
        android:textSize="@dimen/_12ssp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_minus1sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/userName1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>