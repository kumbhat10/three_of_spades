<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewPartner"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPartner"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPartner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:background="@drawable/greenrectanglesimple"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/_10_pts"
        android:textColor="@color/Black"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewPartner"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_57sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>