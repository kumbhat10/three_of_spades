<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundmhs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="openClosePlayerStats"
    tools:context=".MainHomeScreen"
    tools:ignore="DuplicateClickableBoundsCheck">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/playerStatsML"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutDescription="@xml/player_stats_motion_scene"
        app:layout_constraintBottom_toTopOf="@+id/bannerMHS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:motionProgress="0">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="0.5"
            app:shimmer_duration="3500"
            app:shimmer_highlight_alpha="1"
            app:shimmer_highlight_color="@color/font_yellow">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/background_glitter"
                android:contentDescription="@string/todo" />
        </com.facebook.shimmer.ShimmerFrameLayout>
        <TextView
            android:id="@+id/removeAds"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/no_ads_merged"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="removeAdsOrPremium"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:text="@string/no_ad"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            tools:ignore="ContentDescription,TextContrastCheck" />

        <ImageView
            android:id="@+id/contactUS"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:focusable="true"
            android:gravity="center"
            android:onClick="developerCredits"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:src="@drawable/contact_us"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/removeAds"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/rateUsIcon"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/rate_us_star"
            android:gravity="center"
            android:onClick="openRatingWindow"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:tag="rate"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactUS" />

        <TextView
            android:id="@+id/trainingButton"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/button_square"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="trainingStart"
            android:text="@string/train"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rateUsIcon" />

        <TextView
            android:id="@+id/trainingButton1"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/button_square"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="createRoomButton"
            android:tag="10"
            android:text="@string/dummy_nonline"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trainingButton" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainIconGridView"
            android:layout_width="@dimen/gridWidth"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:columnWidth="@dimen/iconWidth"
            android:drawSelectorOnTop="false"
            android:gravity="center"
            android:horizontalSpacing="@dimen/iconSpacingH"
            android:numColumns="2"
            android:verticalSpacing="@dimen/iconSpacingV"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/profileCard"
            android:onClick="openClosePlayerStats"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.ProfileCard"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/watchVideoPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_1000_coins"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/Black"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/profileCard"
            app:layout_constraintEnd_toEndOf="@id/profileCard"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/upWidth"
            android:layout_height="@dimen/upWidth"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:onClick="openClosePlayerStats"
            app:layout_constraintStart_toStartOf="@id/profileCard"
            app:layout_constraintTop_toTopOf="@id/profileCard"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.ProfilePic"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/usernameCardMHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="start|center"
            android:onClick="openClosePlayerStats"
            android:text="@string/playeName"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/_20ssp"
            android:visibility="visible"
            android:fontFamily="@font/luckiest_guy"

            app:layout_constraintBottom_toBottomOf="@id/profilePic"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintTop_toTopOf="@id/profilePic"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <ImageView
            android:id="@+id/userCoinImage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:contentDescription="@string/todo"
            android:src="@drawable/coin_trans_1"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintTop_toBottomOf="@id/usernameCardMHS"
            tools:ignore="ImageContrastCheck" />

        <com.robinhood.ticker.TickerView
            android:id="@+id/userScoreMHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center"
            android:onClick="openClosePlayerStats"
            android:text="@string/usercoinMHS"
            android:textColor="@color/font_yellow"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@id/userCoinImage"
            app:layout_constraintStart_toEndOf="@id/userCoinImage"
            app:layout_constraintTop_toTopOf="@id/userCoinImage"
            app:ticker_animationDuration="2000"
            app:ticker_defaultCharacterList="number"
            app:ticker_defaultPreferredScrollingDirection="up"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@drawable/shine_player_stats"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/_20sdp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileCard">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playerStatsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"
                android:columnWidth="@dimen/_80sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/signOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/shine_player_stats"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="signOut"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:fontFamily="@font/luckiest_guy"
                android:text="@string/signout"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playerStatsGrid"
                tools:ignore="RelativeOverlap,TextContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:text="@string/swipe"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signOut" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <TextView
        android:id="@+id/watchVideoCoin"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/coin_blank"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/watchVideo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="callToShowRewardedVideoAd"
        android:src="@drawable/watch_ad_1000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/watch_video_lottie"
        app:lottie_repeatCount="-1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="closeSettingsWindow"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/settingsLayoutTemp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_230sdp"
            android:layout_margin="@dimen/_30sdp"
            android:background="@drawable/shine_player_stats"
            android:padding="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textMusic"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:gravity="center|start"
                android:fontFamily="@font/luckiest_guy"
                android:text="@string/music"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toTopOf="@id/textSound"
                app:layout_constraintEnd_toStartOf="@id/musicSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/musicSwitch"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:checked="true"
                android:onClick="music"
                android:thumb="@drawable/thumb_music"
                app:layout_constraintBottom_toTopOf="@id/textSound"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textMusic"
                app:layout_constraintTop_toTopOf="parent"
                app:track="@drawable/track1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textSound"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:gravity="center|start"
                android:fontFamily="@font/luckiest_guy"
                android:text="@string/sound"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintEnd_toStartOf="@id/soundSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textSpeech"
                app:layout_constraintTop_toBottomOf="@+id/textMusic" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/soundSwitch"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:checked="true"
                android:onClick="sound"
                android:thumb="@drawable/thumb_sound"
                app:layout_constraintTop_toBottomOf="@+id/textMusic"
                app:layout_constraintBottom_toTopOf="@id/textSpeech"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textSound"
                app:track="@drawable/track1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textSpeech"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:gravity="center|start"
                android:fontFamily="@font/luckiest_guy"
                android:text="@string/speech"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toTopOf="@id/textVibrate"
                app:layout_constraintEnd_toStartOf="@id/speechSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSound" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/speechSwitch"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:checked="true"
                android:onClick="speech"
                android:thumb="@drawable/thumb_speech"
                app:layout_constraintBottom_toTopOf="@id/textVibrate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textSpeech"
                app:layout_constraintTop_toBottomOf="@+id/textSound"
                app:track="@drawable/track1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textVibrate"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:fontFamily="@font/luckiest_guy"
                android:gravity="center|start"
                android:text="@string/vibrate"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vibrateSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textSpeech" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vibrateSwitch"
                android:layout_width="@dimen/settingWidth"
                android:layout_height="@dimen/settingHeight"
                android:checked="true"
                android:onClick="vibrate"
                android:thumb="@drawable/thumb_vibrate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textVibrate"
                app:layout_constraintTop_toBottomOf="@id/textSpeech"
                app:track="@drawable/track1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/closeSettings"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/settingsLayoutTemp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="closeSettingsWindow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingsLayoutTemp"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joinRoomFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="joinRoomWindowExit"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/joinRoomFrameTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blackcirclebutton"
            android:hapticFeedbackEnabled="true"
            android:onClick="joinRoomWindowExit"
            android:paddingTop="@dimen/_85sdp"
            android:paddingBottom="@dimen/_85sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/roomIDInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:cursorVisible="true"
                android:hint="@string/hinRoomID"
                android:imeOptions="actionSend"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:fontFamily="@font/luckiest_guy"
                app:boxBackgroundColor="#1E1E1E"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/Red"
                app:counterEnabled="true"
                app:counterMaxLength="4"
                app:endIconMode="clear_text"
                app:helperText="@string/joinHelper"
                app:helperTextTextColor="@color/icon_yellow"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/icon_yellow"
                app:startIconDrawable="@drawable/group">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/roomIDInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/luckiest_guy"
                    android:imeOptions="actionSend"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_24ssp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/joinRoomButton"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomIDInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/orangesquarebutton"
                android:clickable="true"
                android:fontFamily="@font/luckiest_guy"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="joinRoomButtonClicked"
                android:text="@string/join"
                android:textColor="@color/Black"
                android:textSize="@dimen/_18ssp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/closeJoinRoom"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/joinRoomFrameTemp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="joinRoomWindowExit"
            app:layout_constraintBottom_toBottomOf="@id/joinRoomFrameTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createRoomFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@id/bannerMHS"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true"
        android:onClick="createRoomWindowExit"
        android:visibility="gone">

        <GridView
            android:id="@+id/gridCreateRoom"
            android:layout_width="0dp"
            android:layout_height="@dimen/_350sdp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintVertical_bias="1"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:verticalSpacing="@dimen/_10sdp"
            android:numColumns="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/closeCreateRoom"/>

        <ImageView
            android:id="@+id/closeCreateRoom"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="createRoomWindowExit"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyRewardGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shine_daily_reward"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/ribbon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="0.92"
            app:shimmer_duration="1500"
            app:shimmer_highlight_alpha="1"
            app:shimmer_highlight_color="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ribbon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_65sdp"
                    android:src="@drawable/ribbon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <GridView
                    android:id="@+id/dailyRewardGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:columnWidth="@dimen/_65sdp"
                    android:gravity="center"
                    android:numColumns="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ribbon" />

                <TextView
                    android:id="@+id/claimReward"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/greenrectanglesimple"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_vertical"
                    android:onClick="claimDailyReward"
                    android:paddingStart="@dimen/_14sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_11sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/claim_reward"
                    android:textColor="@color/colorongreen"
                    android:textSize="@dimen/_13ssp"
                    android:tint="?attr/colorControlNormal"
                    app:drawableRightCompat="@drawable/watch_video"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cancelReward"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyRewardGrid" />

                <TextView
                    android:id="@+id/cancelReward"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_toEndOf="@+id/claimReward"
                    android:background="@drawable/redrectanlgesimple"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_vertical"
                    android:onClick="closeDailyRewardWindowDisplay"
                    android:paddingStart="@dimen/_14sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_9sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:tag="close"
                    android:text="@string/cancel_reward"
                    android:textColor="#FDFDFD"
                    android:textSize="@dimen/_13ssp"
                    app:drawableRightCompat="@drawable/watch_video_cancel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/claimReward"
                    app:layout_constraintTop_toBottomOf="@id/dailyRewardGrid" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rateUsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="closeRatingWindow"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/rateUsLayoutFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:background="@drawable/yellowshield"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rateUsImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/rate_us"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/rateUsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/lily_script_one"
                android:gravity="top|center_horizontal"
                android:text="@string/rateMessage"
                android:textColor="@color/Black"
                android:textSize="@dimen/_21ssp"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rateUsIcon1"
                android:layout_width="@dimen/rateUsWidth"
                android:layout_height="@dimen/rateUsHeight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/greenrectanglesimple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="rateUs"
                android:tag="good"
                android:text="@string/yes_love_it"
                android:textColor="@color/Black"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/rateUsWidth"
                android:layout_height="@dimen/rateUsHeight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/redrectanlgesimple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="rateUs"
                android:tag="bad"
                android:text="@string/could_be_better"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_50sdp"
                android:clickable="true"
                android:drawableEnd="@drawable/later"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="askLaterRating"
                android:padding="@dimen/_8sdp"
                android:text="@string/ask_me_later"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maskAllLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/BlackTrans"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lightMHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/loading"
            android:textColor="@color/font_yellow"
            android:fontFamily="@font/luckiest_guy"
            android:textSize="@dimen/_32ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:text="@string/fetching_player"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lightMHS" />

    </androidx.constraintlayout.widget.ConstraintLayout>

