<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundmhs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueburst"
    android:onClick="openClosePlayerStats"
    tools:context=".MainHomeScreen"
    tools:ignore="DuplicateClickableBoundsCheck">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/playerStatsML"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/tint_backgroundmhs"
        app:layoutDescription="@xml/player_stats_motion_scene"
        app:layout_constraintBottom_toTopOf="@+id/addViewMHS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:motionProgress="1">

        <TextView
            android:id="@+id/removeAds"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/no_ads_merged"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="removeAdsOrPremium"
            android:text="@string/no_ad"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/contactUS"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="developerCredits"
            android:src="@drawable/contact_us"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/removeAds"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/rateUsIcon"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/rate_us_star"
            android:gravity="center"
            android:onClick="openRatingWindow"
            android:tag="rate"
            android:text="@string/rate_us"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactUS" />

        <TextView
            android:id="@+id/trainingButton"
            android:layout_width="@dimen/mhsIconsSize"
            android:layout_height="@dimen/mhsIconsSize"
            android:layout_marginTop="@dimen/mhsIconsGap"
            android:layout_marginEnd="@dimen/mhsIconsMargin"
            android:background="@drawable/blackcirclebutton"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="trainingStart"
            android:text="@string/train"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rateUsIcon" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainIconGridView"
            android:layout_width="@dimen/gridWidth"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:columnWidth="@dimen/iconWidth"
            android:drawSelectorOnTop="false"
            android:gravity="center"
            android:horizontalSpacing="@dimen/iconSpacingH"
            android:numColumns="2"
            android:verticalSpacing="@dimen/iconSpacingV"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/shine_player_stats"
            android:onClick="openClosePlayerStats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.ProfileCard"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/upWidth"
            android:layout_height="@dimen/upWidth"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:onClick="openClosePlayerStats"
            app:layout_constraintStart_toStartOf="@id/profileCard"
            app:layout_constraintTop_toTopOf="@id/profileCard"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.ProfilePic"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/usernameCardMHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="start|center"
            android:onClick="openClosePlayerStats"
            android:text="@string/playeName"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/_20ssp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/profilePic"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintTop_toTopOf="@id/profilePic" />

        <ImageView
            android:id="@+id/userCoinImage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:src="@drawable/coin_trans_1"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintTop_toBottomOf="@id/usernameCardMHS" />

        <com.robinhood.ticker.TickerView
            android:id="@+id/userScoreMHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center"
            android:onClick="openClosePlayerStats"
            android:text="@string/usercoinMHS"
            android:textColor="@color/font_yellow"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@id/userCoinImage"
            app:layout_constraintStart_toEndOf="@id/userCoinImage"
            app:layout_constraintTop_toTopOf="@id/userCoinImage"
            app:ticker_animationDuration="1500"
            app:ticker_defaultCharacterList="number"
            app:ticker_defaultPreferredScrollingDirection="any"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@drawable/shine_player_stats"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/_20sdp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileCard">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playerStatsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"
                android:columnWidth="@dimen/_80sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/signOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/shine_player_stats"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="signOut"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="@string/signout"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playerStatsGrid"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:text="@string/swipe"
                android:textColor="@color/font_grey_settings"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signOut" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <TextView
        android:id="@+id/watchVideoCoin"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/coin_blank"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/watchVideo"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/mhsIconsSize"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="showRewardedVideoAd"
        android:src="@drawable/watch_ad_500"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="closeSettingsWindow"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/settingsLayoutTemp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_230sdp"
            android:background="@drawable/shine_player_stats"
            android:layout_margin="@dimen/_30sdp"
            android:padding="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textMusic"
                    android:layout_width="@dimen/settingWidth"
                    android:layout_height="@dimen/settingHeight"
                    android:gravity="center|start"
                    android:text="@string/music"
                    android:textColor="@color/font_grey_settings"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/musicSwitch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textSound"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/musicSwitch"
                        android:layout_width="@dimen/settingWidth"
                        android:layout_height="@dimen/settingHeight"
                        app:layout_constraintStart_toEndOf="@id/textMusic"
                        app:layout_constraintBottom_toTopOf="@id/textSound"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:checked="true"
                        android:onClick="music"
                        android:thumb="@drawable/thumb_music"
                        app:track="@drawable/track1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textSound"
                    android:layout_width="@dimen/settingWidth"
                    android:layout_height="@dimen/settingHeight"
                    android:gravity="center|start"
                    android:text="@string/sound"
                    android:textColor="@color/font_grey_settings"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textMusic"
                    app:layout_constraintBottom_toTopOf="@id/textVibrate"
                    app:layout_constraintEnd_toStartOf="@id/soundSwitch"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/soundSwitch"
                        android:layout_width="@dimen/settingWidth"
                        android:layout_height="@dimen/settingHeight"
                        app:layout_constraintTop_toBottomOf="@+id/textMusic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/textVibrate"
                        app:layout_constraintStart_toEndOf="@id/textSound"
                        android:checked="true"
                        android:onClick="sound"
                        android:thumb="@drawable/thumb_sound"
                        app:track="@drawable/track1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textVibrate"
                    android:layout_width="@dimen/settingWidth"
                    android:layout_height="@dimen/settingHeight"
                    android:gravity="center|start"
                    android:text="@string/vibrate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vibrateSwitch"
                    app:layout_constraintTop_toBottomOf="@id/textSound"
                    android:textColor="@color/font_grey_settings"
                    android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/vibrateSwitch"
                        android:layout_width="@dimen/settingWidth"
                        android:layout_height="@dimen/settingHeight"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textSound"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textVibrate"
                        android:onClick="vibrate"
                        android:thumb="@drawable/thumb_vibrate"
                        app:track="@drawable/track1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/closeSettings"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/settingsLayoutTemp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="closeSettingsWindow"
            app:layout_constraintTop_toBottomOf="@id/settingsLayoutTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joinRoomFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="joinRoomWindowExit"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/joinRoomFrameTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blackcirclebutton"
            android:hapticFeedbackEnabled="true"
            android:onClick="joinRoomWindowExit"
            android:paddingTop="@dimen/_85sdp"
            android:paddingBottom="@dimen/_85sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/roomIDInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:cursorVisible="true"
                android:hint="@string/hinRoomID"
                android:imeOptions="actionSend"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                app:boxBackgroundColor="#1E1E1E"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/Red"
                app:counterEnabled="true"
                app:counterMaxLength="4"
                app:endIconMode="clear_text"
                app:helperText="@string/joinHelper"
                app:helperTextTextColor="@color/icon_yellow"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/icon_yellow"
                app:startIconDrawable="@drawable/group">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/roomIDInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:imeOptions="actionSend"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_24ssp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/joinRoomButton"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomIDInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/orangesquarebutton"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="joinRoomButtonClicked"
                android:text="@string/join"
                android:textColor="@color/Black"
                android:textSize="@dimen/_16ssp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/closeJoinRoom"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/joinRoomFrameTemp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="joinRoomWindowExit"
            app:layout_constraintBottom_toBottomOf="@id/joinRoomFrameTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/createRoomFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="createRoomWindowExit"
        android:visibility="gone">

        <ImageView
            android:id="@+id/closeCreateRoom"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/createRoomFrameTemp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_minus20sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="createRoomWindowExit"
            app:srcCompat="@drawable/close"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/createRoomFrameTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/redcartoonbanner"
            android:orientation="vertical"
            android:padding="@dimen/_30sdp">

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="@dimen/deckWidth"
                android:layout_height="@dimen/deckHeight"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/offline_single_deck"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="createRoomButtonClicked"
                android:tag="0" />

            <pl.droidsonroids.gif.GifImageButton
                android:id="@+id/createSingle"
                android:layout_width="@dimen/deckWidth"
                android:layout_height="@dimen/deckHeight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/single_deck"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="createRoomButtonClicked"
                android:tag="4" />

            <pl.droidsonroids.gif.GifImageButton
                android:id="@+id/createDouble"
                android:layout_width="@dimen/deckWidth"
                android:layout_height="@dimen/deckHeight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/double_deck"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="createRoomButtonClicked"
                android:tag="7" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dailyRewardGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_96sdp"
        android:background="@drawable/shine_player_stats"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ribbon"
            tools:ignore="ContentDescription" />

        <GridView
            android:id="@+id/dailyRewardGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:columnWidth="@dimen/_65sdp"
            android:gravity="center"
            android:numColumns="3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/claimReward"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:background="@drawable/greenrectanglesimple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:onClick="claimDailyReward"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/claim_reward"
                android:textColor="@color/colorongreen"
                android:textSize="@dimen/_13ssp"
                android:tint="?attr/colorControlNormal"
                app:drawableRightCompat="@drawable/watch_video"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_toEndOf="@+id/claimReward"
                android:background="@drawable/redrectanlgesimple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:onClick="closeDailyRewardWindowDisplay"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_9sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/cancel_reward"
                android:textColor="#FDFDFD"
                android:textSize="@dimen/_13ssp"
                app:drawableRightCompat="@drawable/watch_video_cancel"
                app:layout_constraintStart_toEndOf="@id/claimReward"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rateUsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackgroundLittle"
        android:clickable="true"
        android:focusable="true"
        android:onClick="closeRatingWindow"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/rateUsLayoutFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:background="@drawable/yellowshield"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rateUsImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/rate_us"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/rateUsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/lily_script_one"
                android:gravity="top|center_horizontal"
                android:text="@string/rateMessage"
                android:textColor="@color/Black"
                android:textSize="@dimen/_21ssp"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rateUsIcon1"
                android:layout_width="@dimen/rateUsWidth"
                android:layout_height="@dimen/rateUsHeight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/greenrectanglesimple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="rateUs"
                android:tag="good"
                android:text="@string/yes_love_it"
                android:textColor="@color/Black"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/rateUsWidth"
                android:layout_height="@dimen/rateUsHeight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/redrectanlgesimple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="rateUs"
                android:tag="bad"
                android:text="@string/could_be_better"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_50sdp"
                android:clickable="true"
                android:drawableEnd="@drawable/later"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="askLaterRating"
                android:padding="@dimen/_8sdp"
                android:text="@string/ask_me_later"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maskAllLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/BlackTrans"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lightMHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/loading"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/fetching_player"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lightMHS" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rankStats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shine_user_rank"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addViewMHS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rankTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:background="@color/font_yellow"
            android:fontFamily="@font/lily_script_one"
            android:gravity="center"
            android:text="@string/top_players"
            android:textColor="@color/Black"
            android:textSize="@dimen/_24ssp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/space4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/rankTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="closeRankWindow"
            app:layout_constraintBottom_toBottomOf="@id/rankTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rankTitle"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/close" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shine_player_stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/space4"
            app:tabGravity="fill"
            app:tabIndicatorHeight="@dimen/_5sdp"
            app:tabPaddingBottom="@dimen/_2sdp"
            app:tabPaddingTop="@dimen/_2sdp"
            app:tabSelectedTextColor="@color/icon_yellow"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/BlackTransUserStats3"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabRank">

        </androidx.viewpager2.widget.ViewPager2>

        <TextView
            android:id="@+id/rankProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="@dimen/_16ssp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/icon_yellow"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.mopub.mobileads.MoPubView
        android:id="@+id/addViewMHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>