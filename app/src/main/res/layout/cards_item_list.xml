<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDisplayCard"
        app:layout_constraintStart_toStartOf="@+id/imageViewDisplayCard"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDisplayCard"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDisplayCard"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_max="@dimen/_30sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_minus1sdp"
        android:background="@drawable/bluerectanglesimple"
        android:gravity="center"
        android:visibility="visible"
        android:text="@string/_10_pts"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_9ssp" />

    <ImageView
        android:id="@+id/imageViewDisplayCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/widthDisplayCardOthers"
        android:layout_height="@dimen/_57sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:flow_verticalBias="1"
        android:scaleX="1.02"
        android:scaleY="1"
        android:scaleType="fitXY"
        android:cropToPadding="true"
        android:fadingEdge="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/paddingOtherDisplayCard"
        app:srcCompat="@drawable/ic_back_side_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>