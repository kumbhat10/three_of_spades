<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="vertical">

    <TextView
        android:id="@+id/textViewDisplayCard"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_11sdp"
        android:layout_above="@+id/imageViewDisplayCard"
        android:layout_alignEnd="@+id/imageViewDisplayCard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_minus1sdp"
        android:background="@drawable/button_square_cardpoints"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/_10_pts"
        android:textColor="@color/Black"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewDisplayCard"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_54sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/app_name"
        android:contextClickable="true"
        android:cropToPadding="true"
        android:elevation="0dp"
        android:fadingEdge="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/_minus7sdp"
        app:srcCompat="@drawable/s3" />

</RelativeLayout>