<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintHorizontal_chainStyle="spread">

        <TextView
            android:id="@+id/gameNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/player1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player1"
            app:layout_constraintStart_toEndOf="@id/gameNumber"
            app:layout_constraintEnd_toStartOf="@id/player2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player2"
            app:layout_constraintStart_toEndOf="@id/player1"
            app:layout_constraintEnd_toStartOf="@id/player3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player3"
            app:layout_constraintStart_toEndOf="@id/player2"
            app:layout_constraintEnd_toStartOf="@id/player4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player4"
            app:layout_constraintStart_toEndOf="@id/player3"
            app:layout_constraintEnd_toStartOf="@id/player5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player5"
            app:layout_constraintStart_toEndOf="@id/player4"
            app:layout_constraintEnd_toStartOf="@id/player6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player6"
            app:layout_constraintStart_toEndOf="@id/player5"
            app:layout_constraintEnd_toStartOf="@id/player7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

        <TextView
            android:id="@+id/player7"
            app:layout_constraintStart_toEndOf="@id/player6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/playerView1"
            android:textColor="@color/font_grey_settings"
            android:textSize="@dimen/scoreTableTextSize" />

</androidx.constraintlayout.widget.ConstraintLayout>