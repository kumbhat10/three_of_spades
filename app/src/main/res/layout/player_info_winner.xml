<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/red_button">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userPhoto1"
        android:layout_width="@dimen/upWidth1"
        android:layout_height="@dimen/upWidth1"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/neon_button"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.ProfilePic"
        android:src="@drawable/shine_confetti_gs" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/userPhoto1"
        app:layout_constraintStart_toStartOf="@id/userPhoto1"
        app:layout_constraintEnd_toEndOf="@id/userPhoto1"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView2_4a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/userScoreGap"
        android:background="@drawable/shine_game_score"
        android:gravity="center"
        android:paddingTop="@dimen/padding_userScore"
        android:paddingBottom="@dimen/padding_userScore"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="@string/playerView1"
        app:layout_constraintBottom_toBottomOf="parent"


        android:textColor="@color/userScoreColor"
        android:textSize="@dimen/_10ssp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName1" />
</androidx.constraintlayout.widget.ConstraintLayout>