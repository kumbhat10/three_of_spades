<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:backgroundTintMode="src_over"
    android:clickable="false"
    android:contextClickable="true"
    android:focusable="true"
    android:onClick="openWebsite"
    tools:context=".DeveloperCredits">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/black_squares" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="openWebsite"
        android:scaleX= "0.9"
        android:scaleY="0.9"
        android:src= "@drawable/_s_icon_spadeedit" />


    <ImageView
        android:id="@+id/icon_3developer"
        android:onClick="openWebsite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleX= "0.8"
        android:scaleY="0.8"
        android:src= "@drawable/_s_icon_3shadow" />

    <TextView
        android:id="@+id/nameDeveloper"
        android:layout_width="wrap_content"
        android:onClick="sendEmail"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="@dimen/_minus2sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_7sdp"
        android:fontFamily="cursive"
        android:text="@string/developer"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_22ssp" />

    <TextView
        android:id="@+id/textView4"
        android:onClick="sendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="@dimen/_14sdp"
        android:fontFamily="@font/armata"
        android:text="@string/developer_contact"
        android:textColor="#FFD500"
        android:textSize="@dimen/_9ssp" />

    <TextView
        android:id="@+id/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameDeveloper"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_minus2sdp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/armata"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="sendEmail"
        android:text="@string/click_contact"
        android:textColor="#032DFF"
        android:textSize="@dimen/_9ssp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/sizeDC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:onClick="copyToClipBoard"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_8ssp" />

</RelativeLayout>