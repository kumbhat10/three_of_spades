<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAndJoinRoomScreen">

    <ImageView
        android:id="@+id/backgroundJR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addViewCreateJoinRoom"
        android:layout_above="@+id/addViewCreateJoinRoom"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/game_screen_table_blue"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/leaveJoiningRoomIcon"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:contentDescription="@string/todo"
        android:clickable="true"
        android:visibility="gone"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:onClick="closeJoiningRoom"
        app:srcCompat="@drawable/close"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/button_roomID"
        android:onClick="shareRoomInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@drawable/redrectanlgesimple"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="start|center_vertical"
        android:padding="@dimen/_12sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="@string/room_id"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        tools:ignore="RtlSymmetry" />

    <Space
        android:id="@+id/space6"
        android:layout_width="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/button_roomID" />

    <ImageView
        android:id="@+id/imageViewShareButton"
        android:layout_height="@dimen/_50sdp"
        android:layout_width="@dimen/_50sdp"
        android:clickable="true"
        android:contentDescription="@string/todo"
        android:focusable="true"
        android:visibility="gone"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="shareRoomInfo"
        android:src="@drawable/share_green1"
        app:layout_constraintBottom_toBottomOf="@id/button_roomID"
        app:layout_constraintEnd_toEndOf="@+id/space6"
        app:layout_constraintTop_toTopOf="@id/button_roomID" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/waitingToJoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waitingToJoin"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/button_roomID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playersJoin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        app:layout_constraintVertical_bias="0"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/startGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waitingToJoinText" />

    <ProgressBar
        android:id="@+id/progressBarWait"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginBottom="@dimen/_15ssp"
        app:layout_constraintBottom_toTopOf="@id/addViewCreateJoinRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:visibility="visible"
        android:indeterminateBehavior="cycle"
        android:indeterminateOnly="false"
        android:indeterminateTint="#FFFFFF"
        android:progressTintMode="src_in"
        android:rotation="360" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:background="@drawable/redrectanlgesimple"
        android:text = "Start"
        android:textColor="@color/white"
        android:textSize="@dimen/_22ssp"
        android:gravity="center"
        android:onClick="startGame"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/progressBarWait"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/progressBarWait"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/addViewCreateJoinRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:adSize="BANNER"
        app:adUnitId="@string/banner" />

    <View
        android:id="@+id/maskAllLoading1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/addViewCreateJoinRoom"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/BlackTrans"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">
    </View>
    <ProgressBar
        android:id="@+id/progressBarLoading4"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addViewCreateJoinRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateBehavior="cycle"
        android:indeterminateOnly="false"
        android:indeterminateTint="#FFE500"
        android:progressTintMode="src_in"
        android:rotation="360" />
    <TextView
        android:id="@+id/loadingText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/progressBarLoading4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/firingServer"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />
</androidx.constraintlayout.widget.ConstraintLayout>